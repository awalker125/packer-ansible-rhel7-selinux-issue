{
	"variables": {
		"build_number": "0.1",
		"repo_name": "aw125",
		"image_name": "selinux-issue",
		"base_image_name": "centos",
		"base_image_version": "7",
		"built_by": "aw125",
		"base_image_pull": "false"
	},
	"builders": [
		{
			"type": "docker",
			"image": "{{user `repo_name`}}/{{user `base_image_name`}}:{{user `base_image_version`}}",
			"commit": true,
			"pull": "{{user `base_image_pull`}}",
			"changes": [
				"LABEL maintainer \"{{user `built_by`}}\"",  "ENV container docker"
			],
			"volumes": {
				"/image_build/{{user `repo_name`}}-{{user `image_name`}}_{{user `ansible_version`}}/build": "/build"
			}
		}
	],
	"provisioners": [
		{
			"type": "ansible",
			"playbook_file": "ansible/site.yml",
			"extra_arguments": [
				"-vvvv"
			]
		}
	],
	"post-processors": [
		{
			"type": "docker-tag",
			"repository": "{{user `repo_name`}}/{{user `base_image_name`}}-{{user `image_name`}}",
			"tag": "{{user `build_number`}}"
		}, {
			"type": "docker-tag",
			"repository": "{{user `repo_name`}}/{{user `base_image_name`}}-{{user `image_name`}}",
			"tag": "latest"
		}
	]
}